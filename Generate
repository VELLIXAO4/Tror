-- ğŸ’– VELLIX UID GENERATOR ULTRA GEMOY ğŸ’–

if not gg then os.exit() end

local lockFile = "/sdcard/Android/.uid"

local function generateUID()
  local prefix = "VX"
  local hex = "0123456789ABCDEF"
  local cute = {"F", "X", "C", "P", "M", "N"}

  local function randStr(src, len)
    local t = {}
    for i = 1, len do
      local r = math.random(1, #src)
      table.insert(t, src:sub(r, r))
    end
    return table.concat(t)
  end

  math.randomseed(os.time())
  local middle = randStr(hex, 8)
  local suffix = randStr(table.concat(cute), 4)
  return prefix .. "-" .. middle .. "-" .. suffix
end

local function loadingUnyu()
  local bar = ""
  local total = 15
  for i = 1, total do
    bar = bar .. "â™¥"
    gg.toast("ğŸ€ Membuat UID Gemoy...\n[" .. bar .. string.rep("â™¡", total - i) .. "] " .. (i * 100 / total) .. "%%")
    gg.sleep(100 + math.random(10,50))
  end
end

-- ğŸ¾ Cek apakah UID sudah ada
local uid = nil
local f = io.open(lockFile, "r")
if f then uid = f:read("*l") f:close() end

gg.setVisible(false)
gg.sleep(300)

if uid then
  gg.toast("ğŸ” Mengecek UID kamu...")
  gg.sleep(800)
  gg.alert("ğŸ± Kamu sudah punya UID sebelumnya:\n\nâœ¨ " .. uid .. " âœ¨\n\nğŸ“‹ Sudah disalin ke clipboard, nyan~")
  gg.copyText(uid)
  os.exit()
end

-- ğŸ’– Buat UID baru
loadingUnyu()
uid = generateUID()

-- ğŸ”’ Simpan UID ke file
local f = io.open(lockFile, "w")
if f then f:write(uid) f:close() end

gg.toast("âœ… UID berhasil dibuat!")
gg.copyText(uid)

-- ğŸŒ¸ Tampilkan UID akhir
gg.alert([[
ğŸ€ UID Gemoy kamu:

ğŸ†” ]] .. uid .. [[

ğŸ“‹ Sudah disalin otomatis ke clipboard!
Kirim ke admin sekarang yaa~ âœ¨ğŸ˜½
]])

os.exit()
